{
  "manifest_version": 3,
  "name": "LinkCopier - Real-time URL Tracker",
  "version": "2.1.0",
  "description": "Press Ctrl+Q to save URLs to Supabase. Press Ctrl+Shift+C to export to clipboard for Google Sheets",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "copy-url-to-sheet": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Copy current URL to Supabase database"
    },
    "export-to-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Export uncopied URLs to clipboard"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    },
    "default_title": "LinkCopier",
    "default_popup": "popup.html"
  }
}

